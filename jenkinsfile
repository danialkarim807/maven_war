pipeline {
    agent any
    stages {
        stage ('build application'){
            steps{
                sh 'mvn -f pom.xml clean package'
            }
            post {
                success {
                    echo 'now archiving the artifacts...'
                    archiveArtifacts artifacts: '**/*.war'       
                }
            }
        stage('deploy in staging environment'){
            build job: 'Deploy_application_staging_env'
            }
        }
    }
}
